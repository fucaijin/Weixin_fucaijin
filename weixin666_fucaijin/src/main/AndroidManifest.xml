<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fucaijin.weixin_fucaijin">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    //读取外部文件权限
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    //写入外部文件权限
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    //允许装载和卸载文件系统权限
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    //获取网络状态权限
    <uses-permission android:name="android.permission.INTERNET" />
    //加载网络权限

    <!-- 震动权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".global.WeixinApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/SwipeBackTheme">

        <!-- 取消标题栏 ↑ -->
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SelectLanguageActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.HomeActivity" />
        <activity android:name=".activity.ChatActivity" />
        <activity android:name=".activity.PersonalActivity" />
        <activity android:name=".activity.PhoneLoginActivity" />
        <activity android:name=".activity.AddFriendActivity" />
        <activity android:name=".activity.SearchFriendActivity" />
        <activity android:name=".activity.SearchUserDetailInfoActivity"></activity>
    </application>

</manifest>