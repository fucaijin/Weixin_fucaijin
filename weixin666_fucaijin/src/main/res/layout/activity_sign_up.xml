<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ll_base_root_style"
    android:background="@color/colorWhite"
    tools:context="com.fucaijin.weixin_fucaijin.activity.SignUpActivity">

    <!--顶部标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/colorTabTopDarkGray">

        <!--回退/关闭按钮-->
        <RelativeLayout
            android:id="@+id/rl_bt_back"
            style="@style/rl_top_bar_close_back">

            <!--图片-->
            <ImageView
                style="@style/iv_top_bar_go_back"
                android:src="@drawable/img_back"/>

            <!--深灰色竖直分割线-->
            <ImageView
                style="@style/top_bar_divider"/>

        </RelativeLayout>

        <!--标题-->
        <TextView
            android:text="@string/input_phone_number"
            android:layout_toEndOf="@id/rl_bt_back"
            style="@style/top_bar_text"/>

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/tv_nick_name"
            android:text="@string/nick_name"
            style="@style/edit_text_left_text"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="17dp"/>

        <EditText
            android:hint="例如：陈晨"
            android:layout_toRightOf="@id/tv_nick_name"
            android:layout_alignBottom="@id/tv_nick_name"
            style="@style/edit_text_style"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <ImageView
            style="@style/h_line_light_gray"
            android:layout_alignParentBottom="true"
            android:layout_width="262dp"/>
        
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLightGray"/>

    </RelativeLayout>


</LinearLayout>
