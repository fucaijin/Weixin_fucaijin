<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/home_found_frag_lv_item_circle_of_friends"
        android:orientation="vertical"
        style="@style/home_list_view_style">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/home_found_frag_lv_item_iv"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="21dp"/>

            <TextView
                android:id="@+id/home_found_frag_lv_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textColor="@color/colorTextDarkGray"
                android:textSize="@dimen/weixin_main_text_size"/>

        </LinearLayout>

        <!--分割线-->
        <include
            android:id="@+id/home_found_frag_lv_item_divider"
            layout="@layout/divider"/>

    </LinearLayout>


</FrameLayout>