<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.fucaijin.weixin_fucaijin.activity.SignInActivity">

    <!--顶部状态栏的关闭页面按钮-->
    <ImageView
        android:id="@+id/iv_close_bt_sign_in_activity"
        android:layout_width="@dimen/top_bar_height"
        android:layout_height="@dimen/top_bar_height"
        android:background="@drawable/bt_sl_bg_close"
        android:clickable="true"
        android:src="@drawable/top_bar_close_bt" />

    <!--手机号登录页面-->
    <LinearLayout
        android:id="@+id/ll_use_phone_sign_in_ui"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/iv_close_bt_sign_in_activity"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/use_phone_sign_in"
            android:textColor="@color/colorTextDarkGray"
            android:textSize="26sp" />

        <RelativeLayout
            android:id="@+id/rl_select_country"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_marginTop="33dp"
            android:background="@drawable/item_sl_bg"
            android:clickable="true">

            <TextView
                android:id="@+id/tv_country"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="9dp"
                android:text="国家/地区"
                android:textColor="@color/colorBlack"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_country"
                android:text="中国（+86）"
                android:textColor="@color/colorTextGreen"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/colorLightGray" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:paddingLeft="9dp"
                android:text="@string/phone"
                android:textColor="@color/colorTextDarkGray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请填写手机号"
                android:textCursorDrawable="@drawable/edit_text_cursor_img"
                android:textColor="@color/colorTextDarkGray"
                android:textColorHint="@color/colorTextHintLightGray"
                android:textSize="@dimen/text_size" />

            <ImageView
                android:id="@+id/iv_clean_phone_number"
                android:visibility="gone"
                android:layout_width="@dimen/item_height"
                android:layout_height="@dimen/item_height"
                android:padding="17dp"
                android:src="@drawable/clean_num" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/colorLineGreen" />

        <TextView
            android:id="@+id/tv_others_way_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="39dp"
            android:layout_marginTop="23dp"
            android:clickable="true"
            android:paddingLeft="9dp"
            android:text="用微信号/QQ号/邮箱登录"
            android:textColor="@color/colorTextBlue"
            android:textSize="17sp" />

        <Button
            android:id="@+id/bt_sign_in_next"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/bt_sl_bg_sign_in_splash"
            android:text="下一步"
            android:textColor="@drawable/bt_sl_tx_sign_in_splash"
            android:textSize="18sp" />

    </LinearLayout>

    <!--微信/QQ/邮箱登录页面-->
    <LinearLayout
        android:id="@+id/ll_use_other_way_sign_in_ui"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/iv_close_bt_sign_in_activity"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/other_ways_sign_in"
            android:textColor="@color/colorTextDarkGray"
            android:textSize="26sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_marginTop="33dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="9dp"
                android:text="账号"
                android:textColor="@color/colorTextDarkGray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请填写微信号/QQ号/邮箱"
                android:textCursorDrawable="@drawable/edit_text_cursor_img"
                android:textColor="@color/colorTextDarkGray"
                android:textColorHint="@color/colorTextHintLightGray"
                android:textSize="@dimen/text_size"/>

            <ImageView
                android:id="@+id/iv_clean_account"
                android:visibility="gone"
                android:layout_width="@dimen/item_height"
                android:layout_height="@dimen/item_height"
                android:padding="17dp"
                android:src="@drawable/clean_num" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/colorLightGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="9dp"
                android:text="密码"
                android:textColor="@color/colorTextDarkGray"
                android:textSize="16sp" />

            <EditText
                android:textCursorDrawable="@drawable/edit_text_cursor_img"
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请填写密码"
                android:textColor="@color/colorTextDarkGray"
                android:textColorHint="@color/colorTextHintLightGray"
                android:textSize="@dimen/text_size"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/iv_clean_password"
                android:visibility="gone"
                android:layout_width="@dimen/item_height"
                android:layout_height="@dimen/item_height"
                android:padding="17dp"
                android:src="@drawable/clean_num" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/colorLightGray" />

        <TextView
            android:id="@+id/tv_phone_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="39dp"
            android:layout_marginTop="23dp"
            android:paddingLeft="9dp"
            android:text="用手机号登录"
            android:clickable="true"
            android:textColor="@color/colorTextBlue"
            android:textSize="17sp" />

        <Button
            android:id="@+id/bt_sign_in_sign_in_activity"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/bt_sl_bg_sign_in_splash"
            android:text="登录"
            android:textColor="@drawable/bt_sl_tx_sign_in_splash"
            android:textSize="18sp" />

    </LinearLayout>

    <!--底部的：找回密码|紧急冻结|微信安全中心-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textColor="@color/colorTextBlue" />

        <ImageView
            android:layout_width="2px"
            android:layout_height="24dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:background="@color/colorLightGray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="紧急冻结"
            android:textColor="@color/colorTextBlue" />

        <ImageView
            android:layout_width="2px"
            android:layout_height="24dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:background="@color/colorLightGray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信安全中心"
            android:textColor="@color/colorTextBlue" />

    </LinearLayout>

</LinearLayout>
