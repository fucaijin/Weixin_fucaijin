<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.fucaijin.weixin_fucaijin.activity.SignInActivity">

    <ImageView
        android:id="@+id/iv_close_bt_sign_in_activity"
        android:layout_width="@dimen/top_bar_height"
        android:layout_height="@dimen/top_bar_height"
        android:background="@drawable/bt_sl_bg_close"
        android:clickable="true"
        android:src="@drawable/top_bar_close_bt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/iv_close_bt_sign_in_activity"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/use_phone_sign_in"
            android:textColor="@color/colorTextDarkGray"
            android:textSize="26sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_marginTop="55dp"
            android:background="@drawable/item_sl_bg"
            android:clickable="true">

            <TextView
                android:id="@+id/tv_country"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="国家/地区"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_country"
                android:text="中国（+86）"
                android:textColor="@color/colorTextGreen"
                android:textSize="@dimen/text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/colorLightGray" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="手机号"
                android:textColor="@color/colorTextDarkGray"
                android:textSize="@dimen/text_size" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请填写手机号"
                android:textColor="@color/colorTextDarkGray"
                android:textColorHint="@color/colorTextHintLightGray"
                android:textSize="@dimen/text_size" />

            <ImageView
                android:layout_width="@dimen/item_height"
                android:layout_height="@dimen/item_height"
                android:padding="16sp"
                android:src="@drawable/clean_num" />


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/colorLineGreen" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="41dp"
            android:layout_marginTop="28dp"
            android:text="用微信号/QQ号/邮箱登录"
            android:textColor="@color/colorTextBlue"
            android:textSize="@dimen/text_size" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/bt_sl_bg_sign_in_splash"
            android:text="下一步"
            android:textColor="@drawable/bt_sl_tx_sign_in_splash"
            android:textSize="@dimen/button_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textColor="@color/colorTextBlue" />

        <ImageView
            android:layout_width="2px"
            android:layout_height="24dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:background="@color/colorLightGray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="紧急冻结"
            android:textColor="@color/colorTextBlue" />

        <ImageView
            android:layout_width="2px"
            android:layout_height="24dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:background="@color/colorLightGray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信安全中心"
            android:textColor="@color/colorTextBlue" />

    </LinearLayout>


</LinearLayout>
