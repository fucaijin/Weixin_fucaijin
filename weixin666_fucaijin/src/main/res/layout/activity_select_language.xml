<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ll_base_root_style"
    tools:context="com.fucaijin.weixin_fucaijin.activity.SelectLanguageActivity">

    <!--顶部标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/colorTabTopDarkGray">

        <!--回退/关闭按钮-->
        <RelativeLayout
            android:id="@+id/rl_bt_back"
            style="@style/rl_top_bar_close_back">

            <!--图片-->
            <ImageView
                style="@style/iv_top_bar_go_back"
                android:src="@drawable/img_back"/>

            <!--深灰色竖直分割线-->
            <ImageView
                style="@style/top_bar_divider"/>

        </RelativeLayout>

        <!--标题-->
        <TextView
            android:text="@string/selectLanguage"
            android:layout_toEndOf="@id/rl_bt_back"
            style="@style/top_bar_text"/>

        <!--保存按钮-->
        <Button
            android:id="@+id/bt_save_select_language"
            android:text="@string/save_select_language"
            style="@style/top_bar_green_small_button"/>

    </RelativeLayout>

    <!--语言列表-->
    <ListView
        android:id="@+id/lv_selectLanguage"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:clipToPadding="false"
        style="@style/list_view_style">
    </ListView>

</LinearLayout>
