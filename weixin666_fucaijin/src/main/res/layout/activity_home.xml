<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    style="@style/ll_base_root_style"
    tools:context="com.fucaijin.weixin_fucaijin.activity.HomeActivity">

    <!--顶部标题栏-->
    <RelativeLayout
        android:layout_height="@dimen/top_bar_height"
        android:layout_width="match_parent"
        android:background="@color/colorTabTopDarkGray">

        <!--标题-->
        <TextView
            style="@style/w_h_double_wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/colorWhite"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:layout_marginStart="15dp"/>

        <!--新建任务-->
        <ImageView
            android:id="@+id/home_new_task"
            android:layout_width="68dp"
            android:layout_height="@dimen/top_bar_height"
            android:src="@mipmap/home_tab_top_new_task"
            android:padding="15dp"
            android:layout_alignParentEnd="true"/>

        <!--搜索按钮-->
        <ImageView
            android:layout_toStartOf="@id/home_new_task"
            android:layout_width="@dimen/top_bar_height"
            android:layout_height="@dimen/top_bar_height"
            android:src="@mipmap/home_tab_top_search"
            android:padding="15dp"/>

    </RelativeLayout>

    <!--中间的内容-->
    <android.support.v4.view.ViewPager
        android:id="@+id/home_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>

    <!--底部栏上方的分割线-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/colorHomeBottomTabTopDivider"/>

    <!--底部导航栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal"
        android:background="@color/colorHomeBottomTab">

        <!--微信-->
        <LinearLayout
            style="@style/home_bottom_tab_unit_root_ll">

            <ImageView
                style="@style/home_bottom_tab_unit_iv"
                android:src="@drawable/home_bottom_tab_wechat_selector" />

            <TextView
                android:text="微信"
                style="@style/home_bottom_tab_unit_text"/>

        </LinearLayout>

        <!--通讯录-->
        <LinearLayout
            style="@style/home_bottom_tab_unit_root_ll">

            <ImageView
                style="@style/home_bottom_tab_unit_iv"
                android:src="@drawable/home_bottom_tab_address_list_selector" />

            <TextView
                android:text="通讯录"
                style="@style/home_bottom_tab_unit_text"/>

        </LinearLayout>

        <!--发现-->
        <LinearLayout
            style="@style/home_bottom_tab_unit_root_ll">

            <ImageView
                style="@style/home_bottom_tab_unit_iv"
                android:src="@drawable/home_bottom_tab_found_selector" />

            <TextView
                android:text="发现"
                style="@style/home_bottom_tab_unit_text"/>

        </LinearLayout>

        <!--我-->
        <LinearLayout
            style="@style/home_bottom_tab_unit_root_ll">

            <ImageView
                style="@style/home_bottom_tab_unit_iv"
                android:src="@drawable/home_bottom_tab_me_selector" />

            <TextView
                android:text="我"
                style="@style/home_bottom_tab_unit_text"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
