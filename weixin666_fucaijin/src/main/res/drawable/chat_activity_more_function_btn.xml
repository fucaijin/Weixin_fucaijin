<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorChatActivityMoreFunctionBgPressed"/>
            <corners android:radius="11dp"/>
            <stroke android:color="@color/colorChatActivityMoreFunctionStroke" android:width="2px"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorChatActivityMoreFunctionBgNormal"/>
            <corners android:radius="11dp"/>
            <stroke android:color="@color/colorChatActivityMoreFunctionStroke" android:width="2px"/>
        </shape>
    </item>
</selector>